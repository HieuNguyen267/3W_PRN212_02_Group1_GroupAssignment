<Window x:Class="ShoppingOnline.AccountEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chinh sua tai khoan"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2196F3" Padding="20,15">
            <TextBlock Text="Chinh sua thong tin tai khoan" 
                       Foreground="White" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" Padding="30,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Account Information -->
                <TextBlock Text="Thong tin tai khoan" FontSize="16" FontWeight="Bold" 
                          Foreground="#FF333333" Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Username -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên đăng nhập:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="UsernameTextBox" Grid.Row="0" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Email -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="EmailTextBox" Grid.Row="1" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Account Type -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Loai tai khoan:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <ComboBox x:Name="AccountTypeComboBox" Grid.Row="2" Grid.Column="1" 
                             Height="35" Margin="0,0,0,15">
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="Customer"/>
                        <ComboBoxItem Content="Carrier"/>
                    </ComboBox>
                    
                    <!-- Password -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Mật khẩu mới:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <PasswordBox x:Name="PasswordBox" Grid.Row="3" Grid.Column="1" 
                                Height="35" Padding="10" VerticalContentAlignment="Center"
                                Margin="0,0,0,15"/>
                    
                    <!-- Status -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Trang thai:" 
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <CheckBox x:Name="IsActiveCheckBox" Grid.Row="4" Grid.Column="1" 
                             Content="Tai khoan hoat dong" VerticalAlignment="Center"/>
                </Grid>

                <!-- Note -->
                <TextBlock Text="Lưu ý: Để trống mật khẩu nếu không muốn thay đổi" 
                          FontStyle="Italic" Foreground="Gray" FontSize="12" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#FFEEEEEE" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton" Content="Luu" Width="80" Height="35" 
                       Background="#FF4CAF50" Foreground="White" Margin="0,0,10,0"
                       Click="Save_Click"/>
                <Button x:Name="CancelButton" Content="Huy" Width="80" Height="35"
                       Background="#FF9E9E9E" Foreground="White"
                       Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>