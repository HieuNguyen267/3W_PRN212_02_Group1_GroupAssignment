<UserControl x:Class="ShoppingOnline.Views.AdminProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShoppingOnline">
    
    <UserControl.Resources>
        <!-- Add converters -->
        <local:LowStockConverter x:Key="LowStockConverter"/>
        <local:StockStatusConverter x:Key="StockStatusConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Quan ly San pham" FontSize="24" FontWeight="Bold" 
                       Foreground="#E31837"/>
            <TextBlock Text="Danh sach va thong tin san pham" FontSize="14" Foreground="#FF666666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" 
                BorderBrush="#FFE0E0E0" BorderThickness="1">
            <StackPanel>
                <!-- Search and Filter Bar -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <TextBox x:Name="ProductSearchBox" Height="35" FontSize="14" 
                                 Padding="10" VerticalContentAlignment="Center"
                                 TextChanged="ProductSearch_TextChanged"/>
                        <TextBlock x:Name="ProductSearchPlaceholder" Text="Tim kiem theo ten san pham, danh muc..." 
                                   FontSize="14" Foreground="Gray" Margin="15,0,0,0"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Category Filter -->
                    <ComboBox x:Name="CategoryFilterComboBox" Grid.Column="1" Width="150" Height="35" 
                              FontSize="14" Margin="0,0,10,0"
                              SelectionChanged="CategoryFilter_Changed">
                        <ComboBoxItem Content="Tat ca danh muc" IsSelected="True"/>
                    </ComboBox>

                    <!-- Add Product Button -->
                    <Button Grid.Column="2" Content="Them san pham" Height="35" Margin="0,0,10,0" 
                            Click="AddProduct_Click" Style="{DynamicResource ModernButton}"/>

                    <!-- Refresh Button -->
                    <Button Grid.Column="3" Content="Refresh" Height="35" 
                            Click="RefreshProducts_Click" Style="{DynamicResource ModernButton}"/>
                </Grid>

                <!-- Products DataGrid -->
                <DataGrid x:Name="ProductsDataGrid" 
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        GridLinesVisibility="Horizontal"
                        RowBackground="Transparent"
                        AlternatingRowBackground="#FFF8F9FA"
                        BorderThickness="1"
                        BorderBrush="#FFE0E0E0"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeRows="False"
                        SelectionMode="Single"
                        RowHeight="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="80"/>
                        <DataGridTextColumn Header="Ten san pham" Binding="{Binding ProductName}" Width="250"/>
                        <DataGridTextColumn Header="Danh muc" Binding="{Binding Category.CategoryName}" Width="150"/>
                        <DataGridTextColumn Header="Gia" Binding="{Binding Price, StringFormat={}{0:N0}d}" Width="120"/>
                        <DataGridTextColumn Header="Ton kho" Binding="{Binding StockQuantity}" Width="80"/>
                        <DataGridTextColumn Header="Trang thai" Binding="{Binding IsActive}" Width="80"/>
                        
                        <!-- Stock Status Column -->
                        <DataGridTemplateColumn Header="Tinh trang kho" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="5,2" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#FF4CAF50"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                                        <Setter Property="Background" Value="#FFF44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Value="True">
                                                        <DataTrigger.Binding>
                                                            <Binding Path="StockQuantity">
                                                                <Binding.Converter>
                                                                    <local:LowStockConverter/>
                                                                </Binding.Converter>
                                                            </Binding>
                                                        </DataTrigger.Binding>
                                                        <Setter Property="Background" Value="#FFFF9800"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StockQuantity, Converter={StaticResource StockStatusConverter}}" 
                                                   Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Thao tac" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Xem" Height="30" FontSize="11" Margin="2" Width="50"
                                                Click="ViewProduct_Click" Tag="{Binding ProductId}" 
                                                Style="{DynamicResource ModernButton}"/>
                                        <Button Content="Sua" Height="30" FontSize="11" Margin="2" Width="50"
                                                Background="#FFFF9800" Click="EditProduct_Click" Tag="{Binding ProductId}"
                                                Style="{DynamicResource ModernButton}"/>
                                        <Button Content="Xoa" Height="30" FontSize="11" Margin="2" Width="50"
                                                Background="#FFF44336" Click="DeleteProduct_Click" Tag="{Binding ProductId}"
                                                Style="{DynamicResource ModernButton}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock x:Name="ProductCountText" Text="Tong: 0 san pham" FontSize="14" 
                       VerticalAlignment="Center" Margin="0,0,20,0"/>
        </StackPanel>
    </Grid>
</UserControl>