<UserControl x:Class="ShoppingOnline.Views.AdminAccountManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShoppingOnline.Views">
    
    <UserControl.Resources>
        <!-- Converters for status display -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <!-- Custom converters for better display -->
        <local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <local:BoolToToggleButtonConverter x:Key="BoolToToggleButtonConverter"/>
        <local:BoolToToggleButtonBackgroundConverter x:Key="BoolToToggleButtonBackgroundConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <TextBox x:Name="AccountSearchBox" Height="35" FontSize="14" 
                         Padding="10" VerticalContentAlignment="Center"
                         TextChanged="AccountSearch_TextChanged"/>
                <TextBlock x:Name="AccountSearchPlaceholder" Text="Search by username, email..." 
                           FontSize="14" Foreground="Gray" Margin="15,0,0,0"
                           VerticalAlignment="Center" HorizontalAlignment="Left"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Account Type Filter -->
            <ComboBox x:Name="AccountTypeFilterComboBox" Grid.Column="1" Width="150" Height="35" 
                      FontSize="14" Margin="0,0,10,0"
                      SelectionChanged="AccountTypeFilter_Changed">
                <ComboBoxItem Content="All Account Types" IsSelected="True"/>
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Customer"/>
                <ComboBoxItem Content="Carrier"/>
            </ComboBox>

            <!-- Status Filter -->
            <ComboBox x:Name="StatusFilterComboBox" Grid.Column="2" Width="150" Height="35" 
                      FontSize="14" Margin="0,0,10,0"
                      SelectionChanged="StatusFilter_Changed">
                <ComboBoxItem Content="All Status" IsSelected="True"/>
                <ComboBoxItem Content="Active"/>
                <ComboBoxItem Content="Locked"/>
            </ComboBox>

            <!-- Refresh Button -->
            <Button Grid.Column="3" Content="Refresh" Height="35" Width="80"
                    Click="RefreshAccounts_Click" Style="{DynamicResource ModernButton}"/>
        </Grid>

        <!-- Accounts DataGrid -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" 
                BorderBrush="#FFE0E0E0" BorderThickness="1">
            <DataGrid x:Name="AccountsDataGrid" 
                    AutoGenerateColumns="False"
                    HeadersVisibility="Column"
                    GridLinesVisibility="Horizontal"
                    RowBackground="Transparent"
                    AlternatingRowBackground="#FFF8F9FA"
                    BorderThickness="1"
                    BorderBrush="#FFE0E0E0"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeRows="False"
                    SelectionMode="Single"
                    RowHeight="50">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding AccountId}" Width="80"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="150"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                    <DataGridTextColumn Header="Account Type" Binding="{Binding AccountType}" Width="120"/>
                    <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                    
                    <!-- Status Column -->
                    <DataGridTemplateColumn Header="Status" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <Binding Path="IsActive" Converter="{StaticResource BoolToStatusConverter}"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="View" Height="30" FontSize="11" Margin="2" Width="50"
                                            Click="ViewAccount_Click" Tag="{Binding AccountId}" 
                                            Background="#FF2196F3" Foreground="White"
                                            Style="{DynamicResource ModernButton}"/>
                                    <Button Content="Edit" Height="30" FontSize="11" Margin="2" Width="50"
                                            Background="#FFFF9800" Foreground="White" Click="EditAccount_Click" Tag="{Binding AccountId}"
                                            Style="{DynamicResource ModernButton}"/>
                                    <Button Height="30" FontSize="11" Margin="2" Width="70"
                                            Click="ToggleAccountStatus_Click" Tag="{Binding AccountId}"
                                            Foreground="White"
                                            Style="{DynamicResource ModernButton}">
                                        <Button.Content>
                                            <Binding Path="IsActive" Converter="{StaticResource BoolToToggleButtonConverter}"/>
                                        </Button.Content>
                                        <Button.Background>
                                            <Binding Path="IsActive" Converter="{StaticResource BoolToToggleButtonBackgroundConverter}"/>
                                        </Button.Background>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock x:Name="AccountCountText" Text="Total: 0 accounts" FontSize="14" 
                       VerticalAlignment="Center" Margin="0,0,20,0"/>
        </StackPanel>
    </Grid>
</UserControl>