<UserControl x:Class="ShoppingOnline.Views.AdminCategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShoppingOnline">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header riêng trong view -->

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" 
                BorderBrush="#FFE0E0E0" BorderThickness="1">
            <StackPanel>
                <!-- Search Bar -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <TextBox x:Name="CategorySearchBox" Height="35" FontSize="14" 
                                 Padding="10" VerticalContentAlignment="Center"
                                 TextChanged="CategorySearch_TextChanged"/>
                        <TextBlock x:Name="CategorySearchPlaceholder" Text="Tim kiem theo ten danh muc..." 
                                   FontSize="14" Foreground="Gray" Margin="15,0,0,0"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Add Category Button -->
                    <Button Grid.Column="1" Content="Them danh muc" Height="35" Margin="0,0,10,0" 
                            Click="AddCategory_Click" Style="{DynamicResource ModernButton}"/>

                    <!-- Refresh Button -->
                    <Button Grid.Column="2" Content="Refresh" Height="35" 
                            Click="RefreshCategories_Click" Style="{DynamicResource ModernButton}"/>
                </Grid>

                <!-- Categories DataGrid -->
                <DataGrid x:Name="CategoriesDataGrid" 
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        GridLinesVisibility="Horizontal"
                        RowBackground="Transparent"
                        AlternatingRowBackground="#FFF8F9FA"
                        BorderThickness="1"
                        BorderBrush="#FFE0E0E0"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeRows="False"
                        SelectionMode="Single"
                        RowHeight="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="80"/>
                        <DataGridTextColumn Header="Ten danh muc" Binding="{Binding CategoryName}" Width="250"/>
                        <DataGridTextColumn Header="Mo ta" Binding="{Binding Description}" Width="300"/>

                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Thao tac" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Xem" Height="30" FontSize="11" Margin="2" Width="50"
                                                Click="ViewCategory_Click" Tag="{Binding CategoryId}" 
                                                Style="{DynamicResource ModernButton}"/>
                                        <Button Content="Sua" Height="30" FontSize="11" Margin="2" Width="50"
                                                Background="#FFFF9800" Click="EditCategory_Click" Tag="{Binding CategoryId}"
                                                Style="{DynamicResource ModernButton}"/>
                                        <Button Content="Xoa" Height="30" FontSize="11" Margin="2" Width="50"
                                                Background="#FFF44336" Click="DeleteCategory_Click" Tag="{Binding CategoryId}"
                                                Style="{DynamicResource ModernButton}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock x:Name="CategoryCountText" Text="Tong: 0 danh muc" FontSize="14" 
                       VerticalAlignment="Center" Margin="0,0,20,0"/>
        </StackPanel>
    </Grid>
</UserControl>
