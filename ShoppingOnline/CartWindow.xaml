<Window x:Class="ShoppingOnline.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingOnline"
        xmlns:converters="clr-namespace:ShoppingOnline.Converters"

        mc:Ignorable="d"
        Title="Giá» hÃ ng" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryRed" Color="#E31837"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="DarkGray" Color="#666666"/>
        <SolidColorBrush x:Key="MediumGray" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="Green" Color="#28A745"/>
        <SolidColorBrush x:Key="Blue" Color="#007BFF"/>

        <!-- Styles -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="CartItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ProductImageStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource LightGray}"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style x:Key="ProductTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ProductPriceStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryRed}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LightGray}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="QuantityTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="{StaticResource MediumGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="SummaryBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="CheckoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Green}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ContinueShoppingButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Converters -->
        <local:PriceToMillionConverter x:Key="PriceToMillionConverter"/>
        <converters:FirstImageConverter x:Key="FirstImageConverter"/>
        <converters:VisibilityConverter x:Key="VisibilityConverter"/>
        <local:EmptyCartVisibilityConverter x:Key="EmptyCartVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryRed}" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Button Content="â†" Background="Transparent" Foreground="White" FontSize="20" 
                        BorderThickness="0" Click="BackToHome_Click" Margin="0,0,20,0"/>
                <TextBlock Text="Giá» hÃ ng" Foreground="White" FontSize="24" FontWeight="Bold" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cart Items -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="Sáº£n pháº©m trong giá» hÃ ng" Style="{StaticResource HeaderStyle}"/>
                    
                    <ItemsControl ItemsSource="{Binding CartItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CartItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Product Image -->
                                        <Border Grid.Column="0" Style="{StaticResource ProductImageStyle}" Margin="0,0,15,0">
                                            <Grid>
                                                <!-- Product Image Display -->
                                                <Image Stretch="Uniform" MaxWidth="70" MaxHeight="70" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Image.Source>
                                                        <Binding Path="Product.ProductImages" Converter="{StaticResource FirstImageConverter}"/>
                                                    </Image.Source>
                                                </Image>
                                                
                                                <!-- Fallback icon if no image -->
                                                <TextBlock Text="ðŸ“±" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           Visibility="{Binding Product.ProductImages.Count, Converter={StaticResource VisibilityConverter}}"/>
                                            </Grid>
                                        </Border>

                                        <!-- Product Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Product.ProductName}" Style="{StaticResource ProductTitleStyle}"/>
                                            <TextBlock Text="{Binding Product.Category.CategoryName}" 
                                                       Foreground="{StaticResource DarkGray}" FontSize="12"/>
                                            <TextBlock Text="{Binding Product.Price, Converter={StaticResource PriceToMillionConverter}}" 
                                                       Style="{StaticResource ProductPriceStyle}"/>
                                        </StackPanel>

                                        <!-- Quantity Controls -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                                            <Button Content="-" Style="{StaticResource QuantityButtonStyle}" 
                                                    Click="DecreaseQuantity_Click"/>
                                            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource QuantityTextBoxStyle}" Margin="5,0"/>
                                            <Button Content="+" Style="{StaticResource QuantityButtonStyle}" 
                                                    Click="IncreaseQuantity_Click"/>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="Thanh toÃ¡n" Style="{StaticResource CheckoutButtonStyle}" 
                                                    Click="CheckoutItem_Click" Margin="0,0,10,0" Padding="10,5" FontSize="12"/>
                                            <Button Content="XÃ³a" Style="{StaticResource DeleteButtonStyle}" 
                                                    Click="DeleteItem_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty Cart Message -->
                    <Border Style="{StaticResource CartItemStyle}" 
                            Visibility="{Binding CartItems.Count, Converter={StaticResource EmptyCartVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ›’" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="Giá» hÃ ng trá»‘ng" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Báº¡n chÆ°a cÃ³ sáº£n pháº©m nÃ o trong giá» hÃ ng" 
                                       Foreground="{StaticResource DarkGray}" HorizontalAlignment="Center"/>
                            <Button Content="Tiáº¿p tá»¥c mua sáº¯m" Style="{StaticResource ContinueShoppingButtonStyle}" 
                                    Click="ContinueShopping_Click" Margin="0,20,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Order Summary -->
            <Border Grid.Column="1" Style="{StaticResource SummaryBorderStyle}">
                <StackPanel>
                    <TextBlock Text="TÃ³m táº¯t Ä‘Æ¡n hÃ ng" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Táº¡m tÃ­nh:" FontSize="14"/>
                            <TextBlock Text="{Binding SubTotal, StringFormat='{}{0:N0}â‚«'}" 
                                       FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" 
                                       Grid.Column="1"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="PhÃ­ váº­n chuyá»ƒn:" FontSize="14"/>
                            <TextBlock Text="{Binding ShippingFee, StringFormat='{}{0:N0}â‚«'}" 
                                       FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" 
                                       Grid.Column="1"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Giáº£m giÃ¡:" FontSize="14"/>
                            <TextBlock Text="{Binding Discount, StringFormat='-{0:N0}â‚«'}" 
                                       FontSize="14" FontWeight="Bold" Foreground="{StaticResource Green}" 
                                       HorizontalAlignment="Right" Grid.Column="1"/>
                        </StackPanel>
                        
                        <Separator Margin="0,10"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tá»•ng cá»™ng:" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Total, StringFormat='{}{0:N0}â‚«'}" 
                                       FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryRed}" 
                                       HorizontalAlignment="Right" Grid.Column="1"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Thanh toÃ¡n" Style="{StaticResource CheckoutButtonStyle}" 
                            Click="Checkout_Click" IsEnabled="{Binding HasItems}"/>
                    
                    <Button Content="Tiáº¿p tá»¥c mua sáº¯m" Style="{StaticResource ContinueShoppingButtonStyle}" 
                            Click="ContinueShopping_Click" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
