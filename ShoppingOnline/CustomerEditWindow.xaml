<Window x:Class="ShoppingOnline.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quan ly khach hang"
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2196F3" Padding="20,15">
            <TextBlock x:Name="HeaderTitle" Text="Them khach hang moi" 
                       Foreground="White" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" Padding="30,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Account Information -->
                <TextBlock Text="Thong tin tai khoan" FontSize="16" FontWeight="Bold" 
                          Foreground="#FF333333" Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Username -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Ten dang nhap:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="UsernameTextBox" Grid.Row="0" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Email -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="EmailTextBox" Grid.Row="1" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Password -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Mat khau:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" 
                                Height="35" Padding="10" VerticalContentAlignment="Center"
                                Margin="0,0,0,15"/>
                </Grid>

                <!-- Separator -->
                <Separator Margin="0,10"/>

                <!-- Customer Information -->
                <TextBlock Text="Thong tin ca nhan" FontSize="16" FontWeight="Bold" 
                          Foreground="#FF333333" Margin="0,10,0,10"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Full Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Ho va ten:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="FullNameTextBox" Grid.Row="0" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Phone -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="So dien thoai:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="PhoneTextBox" Grid.Row="1" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Address -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Dia chi:" 
                              VerticalAlignment="Top" Margin="0,5,10,0"/>
                    <TextBox x:Name="AddressTextBox" Grid.Row="2" Grid.Column="1" 
                            Height="80" Padding="10" TextWrapping="Wrap"
                            AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </Grid>

                <!-- Status (only for edit mode) -->
                <Grid x:Name="StatusGrid" Visibility="Collapsed" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Trang thai:" 
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <CheckBox x:Name="IsActiveCheckBox" Grid.Column="1" 
                             Content="Tai khoan hoat dong" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#FFEEEEEE" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton" Content="Luu" Width="80" Height="35" 
                       Background="#FF4CAF50" Foreground="White" Margin="0,0,10,0"
                       Click="Save_Click"/>
                <Button x:Name="CancelButton" Content="Huy" Width="80" Height="35"
                       Background="#FF9E9E9E" Foreground="White"
                       Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>