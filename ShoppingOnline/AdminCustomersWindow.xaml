						</DataGridTemplateColumn>
					</DataGrid.Columns>
				</DataGrid>

				<!-- Customers DataGrid -->
			</StackPanel>
		</Border>

		<!-- Footer -->
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
			<TextBlock x:Name="CustomerCountText" Text="Tá»•ng: 0 khÃ¡ch hÃ ng" FontSize="14" 
                       VerticalAlignment="Center" Margin="0,0,20,0"/>
			<Button Content="ÄÃ³ng" Style="{StaticResource ModernButton}" 
