<Window x:Class="ShoppingOnline.CarrierEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý nhà vận chuyển"
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2196F3" Padding="20,15">
            <TextBlock x:Name="HeaderTitle" Text="Thêm nhà vận chuyển mới" 
                       Foreground="White" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" Padding="30,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Account Information -->
                <TextBlock Text="Thông tin tài khoản" FontSize="16" FontWeight="Bold" 
                          Foreground="#FF333333" Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Username -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên đăng nhập:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="UsernameTextBox" Grid.Row="0" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Email -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="EmailTextBox" Grid.Row="1" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Password -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Mật khẩu:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" 
                                Height="35" Padding="10" VerticalContentAlignment="Center"
                                Margin="0,0,0,15"/>
                </Grid>

                <!-- Separator -->
                <Separator Margin="0,10"/>

                <!-- Carrier Information -->
                <TextBlock Text="Thông tin nhà vận chuyển" FontSize="16" FontWeight="Bold" 
                          Foreground="#FF333333" Margin="0,10,0,10"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Full Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Họ và tên:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="FullNameTextBox" Grid.Row="0" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Phone -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Số điện thoại:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="PhoneTextBox" Grid.Row="1" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                    
                    <!-- Vehicle Number -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Số xe:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <TextBox x:Name="VehicleNumberTextBox" Grid.Row="2" Grid.Column="1" 
                            Height="35" Padding="10" VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                </Grid>

                <!-- Status (only for edit mode) -->
                <Grid x:Name="StatusGrid" Visibility="Collapsed" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Trạng thái TK:" 
                              VerticalAlignment="Center" Margin="0,0,10,15"/>
                    <CheckBox x:Name="IsActiveCheckBox" Grid.Row="0" Grid.Column="1" 
                             Content="Tài khoản hoạt động" VerticalAlignment="Center" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Sẵn sàng:" 
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <CheckBox x:Name="IsAvailableCheckBox" Grid.Row="1" Grid.Column="1" 
                             Content="Sẵn sàng giao hàng" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#FFEEEEEE" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton" Content="Lưu" Width="80" Height="35" 
                       Background="#FF4CAF50" Foreground="White" Margin="0,0,10,0"
                       Click="Save_Click"/>
                <Button x:Name="CancelButton" Content="Hủy" Width="80" Height="35"
                       Background="#FF9E9E9E" Foreground="White"
                       Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>