<Window x:Class="ShoppingOnline.AccountSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cài đặt tài khoản - ShoppingOnline" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E31837"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C41230"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Cài đặt tài khoản" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Quản lý thông tin cá nhân và bảo mật tài khoản" 
                       FontSize="14" Foreground="#666666" Margin="0,0,0,20"/>
        </StackPanel>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Personal Information Section -->
                <TextBlock Text="Thông tin cá nhân" Style="{StaticResource SectionHeaderStyle}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Họ và tên" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="FullNameTextBox" Style="{StaticResource TextBoxStyle}"/>
                        
                        <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock Text="Số điện thoại" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PhoneTextBox" Style="{StaticResource TextBoxStyle}"/>
                        
                        <TextBlock Text="Địa chỉ" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="AddressTextBox" Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                </Grid>
                
                <!-- Security Section -->
                <TextBlock Text="Bảo mật" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,0"/>
                
                <TextBlock Text="Mật khẩu hiện tại" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="CurrentPasswordBox" Style="{StaticResource PasswordBoxStyle}"/>
                
                <TextBlock Text="Mật khẩu mới" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="NewPasswordBox" Style="{StaticResource PasswordBoxStyle}"/>
                
                <TextBlock Text="Xác nhận mật khẩu mới" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource PasswordBoxStyle}"/>
                
                <!-- Notification Settings -->
                <TextBlock Text="Cài đặt thông báo" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,0"/>
                
                <CheckBox x:Name="EmailNotificationCheckBox" Content="Nhận thông báo qua email" 
                          FontSize="14" Margin="0,0,0,10"/>
                <CheckBox x:Name="SMSNotificationCheckBox" Content="Nhận thông báo qua SMS" 
                          FontSize="14" Margin="0,0,0,10"/>
                <CheckBox x:Name="PromotionNotificationCheckBox" Content="Nhận thông báo khuyến mãi" 
                          FontSize="14" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Hủy" Style="{StaticResource SecondaryButtonStyle}" Click="Cancel_Click"/>
            <Button Content="Lưu thay đổi" Style="{StaticResource PrimaryButtonStyle}" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
