<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ShoppingOnline.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Shopping Online" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#FFF8F9FA">
    
    <Window.Resources>
        <!-- Red Theme Colors -->
        <SolidColorBrush x:Key="PrimaryRed" Color="#E31837"/>
        <SolidColorBrush x:Key="DarkRed" Color="#C41230"/>
        <SolidColorBrush x:Key="LightRed" Color="#FFE8EB"/>
        <SolidColorBrush x:Key="AccentRed" Color="#FF6B7C"/>
        
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="10" 
                                    ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="15" 
                                    ShadowDepth="3" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkRed}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B01029"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkRed}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource LightRed}"/>
                                <Setter Property="Foreground" Value="{StaticResource DarkRed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryRed}">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource DarkRed}" Height="80">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ADMIN" FontSize="24" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="DASHBOARD" FontSize="16" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Margin="0,20,0,0">
                    <Button Content="📊 Dashboard" Style="{StaticResource SidebarButton}" 
                          Click="Dashboard_Click" x:Name="DashboardBtn"/>
                    <Button Content="👥 Quan ly Khach hang" Style="{StaticResource SidebarButton}" 
                          Click="Customers_Click" x:Name="CustomersBtn"/>
                    <Button Content="📦 Quan ly San pham" Style="{StaticResource SidebarButton}" 
                          Click="Products_Click" x:Name="ProductsBtn"/>
                    <Button Content="🛍️ Quan ly Don hang" Style="{StaticResource SidebarButton}" 
                          Click="Orders_Click" x:Name="OrdersBtn"/>
                    <Button Content="📋 Quan ly Danh muc" Style="{StaticResource SidebarButton}" 
                          Click="Categories_Click" x:Name="CategoriesBtn"/>
                    <Button Content="👨‍💻 Quan ly Admin" Style="{StaticResource SidebarButton}" 
                          Click="Admins_Click" x:Name="AdminsBtn"/>
                    <Button Content="📈 Bao cao" Style="{StaticResource SidebarButton}" 
                          Click="Reports_Click" x:Name="ReportsBtn"/>
                </StackPanel>

                <!-- User Info -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,20">
                    <Border Background="{StaticResource DarkRed}" CornerRadius="5" Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock x:Name="AdminNameText" Text="Admin User" 
                                     Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="AdminEmailText" Text="admin@shop.com" 
                                     Foreground="#FFBDC3C7" FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    <Button Content="🚪 Dang xuat" Style="{StaticResource SidebarButton}" 
                          Click="Logout_Click" Background="#B01029"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MainContent">
                <!-- Page Title -->
                <Border Background="White" Margin="20,20,20,0" CornerRadius="10" Padding="25">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="PageTitle" Text="📊 Dashboard" FontSize="28" 
                                 FontWeight="Bold" Foreground="{StaticResource PrimaryRed}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="PageSubtitle" Text="Tong quan he thong" FontSize="16" 
                                 Foreground="#FF7F8C8D" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Dashboard Content -->
                <StackPanel x:Name="DashboardContent" Visibility="Visible">
                    <!-- Statistics Cards -->
                    <Grid Margin="20,20,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Customers Card -->
                        <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{StaticResource PrimaryRed}" Width="50" Height="50" CornerRadius="25">
                                        <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="TotalCustomersText" Text="0" FontSize="24" 
                                                 FontWeight="Bold" Foreground="{StaticResource PrimaryRed}"/>
                                        <TextBlock Text="Khach hang" FontSize="14" Foreground="#FF7F8C8D"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Total Products Card -->
                        <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{StaticResource AccentRed}" Width="50" Height="50" CornerRadius="25">
                                        <TextBlock Text="📦" FontSize="24" HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="TotalProductsText" Text="0" FontSize="24" 
                                                 FontWeight="Bold" Foreground="{StaticResource PrimaryRed}"/>
                                        <TextBlock Text="San pham" FontSize="14" Foreground="#FF7F8C8D"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Total Orders Card -->
                        <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{StaticResource DarkRed}" Width="50" Height="50" CornerRadius="25">
                                        <TextBlock Text="🛍️" FontSize="24" HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="TotalOrdersText" Text="0" FontSize="24" 
                                                 FontWeight="Bold" Foreground="{StaticResource PrimaryRed}"/>
                                        <TextBlock Text="Don hang" FontSize="14" Foreground="#FF7F8C8D"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Total Revenue Card -->
                        <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#E74C3C" Width="50" Height="50" CornerRadius="25">
                                        <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="TotalRevenueText" Text="0đ" FontSize="20" 
                                                 FontWeight="Bold" Foreground="{StaticResource PrimaryRed}"/>
                                        <TextBlock Text="Doanh thu" FontSize="14" Foreground="#FF7F8C8D"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Today Stats -->
                    <Grid Margin="20,20,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Today Orders Card -->
                        <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="📅 Hom nay" FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource PrimaryRed}" Margin="0,0,0,15"/>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{StaticResource AccentRed}" Width="40" Height="40" CornerRadius="20">
                                        <TextBlock Text="📊" FontSize="20" HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="TodayOrdersText" Text="0" FontSize="20" 
                                                 FontWeight="Bold" Foreground="{StaticResource PrimaryRed}"/>
                                        <TextBlock Text="Don hang moi" FontSize="12" Foreground="#FF7F8C8D"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Today Revenue Card -->
                        <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="💸 Doanh thu hom nay" FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource PrimaryRed}" Margin="0,0,0,15"/>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{StaticResource DarkRed}" Width="40" Height="40" CornerRadius="20">
                                        <TextBlock Text="💳" FontSize="20" HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock x:Name="TodayRevenueText" Text="0đ" FontSize="18" 
                                                 FontWeight="Bold" Foreground="{StaticResource PrimaryRed}"/>
                                        <TextBlock Text="Tu don da hoan thanh" FontSize="12" Foreground="#FF7F8C8D"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recent Orders and Low Stock -->
                    <Grid Margin="20,20,20,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Recent Orders -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="🕒 Don hang gan day" FontSize="18" FontWeight="SemiBold" 
                                             Foreground="{StaticResource PrimaryRed}"/>
                                    <Button Content="Xem tat ca" Style="{StaticResource ModernButton}" 
                                          Height="30" FontSize="12" Margin="20,0,0,0"
                                          Click="ViewAllOrders_Click"/>
                                </StackPanel>
                                
                                <DataGrid x:Name="RecentOrdersGrid" 
                                        AutoGenerateColumns="False"
                                        HeadersVisibility="Column"
                                        GridLinesVisibility="None"
                                        RowBackground="Transparent"
                                        AlternatingRowBackground="#FFF8F9FA"
                                        BorderThickness="0"
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        CanUserReorderColumns="False"
                                        CanUserResizeRows="False"
                                        SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="60"/>
                                        <DataGridTextColumn Header="Khach hang" Binding="{Binding Customer.FullName}" Width="150"/>
                                        <DataGridTextColumn Header="Ngay" Binding="{Binding OrderDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                                        <DataGridTextColumn Header="Tong tien" Binding="{Binding TotalAmount, StringFormat={}{0:N0}d}" Width="120"/>
                                        <DataGridTextColumn Header="Trang thai" Binding="{Binding Status}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Low Stock Products -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="⚠️ San pham sap het" FontSize="18" FontWeight="SemiBold" 
                                             Foreground="{StaticResource PrimaryRed}"/>
                                    <Button Content="Quan ly kho" Style="{StaticResource ModernButton}" 
                                          Height="30" FontSize="12" Margin="20,0,0,0"
                                          Background="#FFFF6B6B"
                                          Click="ManageStock_Click"/>
                                </StackPanel>
                                
                                <DataGrid x:Name="LowStockGrid" 
                                        AutoGenerateColumns="False"
                                        HeadersVisibility="Column"
                                        GridLinesVisibility="None"
                                        RowBackground="Transparent"
                                        AlternatingRowBackground="#FFF8F9FA"
                                        BorderThickness="0"
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        CanUserReorderColumns="False"
                                        CanUserResizeRows="False"
                                        SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Ten san pham" Binding="{Binding ProductName}" Width="200"/>
                                        <DataGridTextColumn Header="Danh muc" Binding="{Binding Category.CategoryName}" Width="120"/>
                                        <DataGridTextColumn Header="Ton kho" Binding="{Binding StockQuantity}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Other Content Panels -->
                <StackPanel x:Name="CustomersContent" Visibility="Collapsed">
                    <!-- Customer management content will be added here -->
                    <TextBlock Text="Customer Management Coming Soon..." FontSize="20" 
                             HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Foreground="#FF7F8C8D" Margin="50"/>
                </StackPanel>

                <StackPanel x:Name="ProductsContent" Visibility="Collapsed">
                    <!-- Product management content will be added here -->
                    <TextBlock Text="Product Management Coming Soon..." FontSize="20" 
                             HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Foreground="#FF7F8C8D" Margin="50"/>
                </StackPanel>

                <StackPanel x:Name="OrdersContent" Visibility="Collapsed">
                    <!-- Order Management Content -->
                    <Border Background="White" Margin="20,20,20,0" CornerRadius="10" Padding="25">
                        <StackPanel>
                            <!-- Filter and Search Bar -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Search Box with Placeholder -->
                                <Grid Grid.Column="0" Margin="0,0,10,0">
                                    <TextBox x:Name="OrderSearchBox" Height="35" FontSize="14" 
                                             Padding="10" VerticalContentAlignment="Center"
                                             TextChanged="OrderSearch_TextChanged"
                                             GotFocus="OrderSearchBox_GotFocus"
                                             LostFocus="OrderSearchBox_LostFocus"/>
                                    <TextBlock x:Name="SearchPlaceholder" Text="Tim kiem theo ID, ten khach hang, SDT..." 
                                               FontSize="14" Foreground="Gray" Margin="15,0,0,0"
                                               VerticalAlignment="Center" HorizontalAlignment="Left"
                                               IsHitTestVisible="False"/>
                                </Grid>

                                <!-- Status Filter -->
                                <ComboBox x:Name="StatusFilterComboBox" Grid.Column="1" Width="150" Height="35" 
                                          FontSize="14" Margin="0,0,10,0"
                                          SelectionChanged="StatusFilter_Changed">
                                    <ComboBoxItem Content="Tat ca trang thai" IsSelected="True"/>
                                    <ComboBoxItem Content="Pending"/>
                                    <ComboBoxItem Content="Confirmed"/>
                                    <ComboBoxItem Content="Shipping"/>
                                    <ComboBoxItem Content="Delivered"/>
                                    <ComboBoxItem Content="Cancelled"/>
                                </ComboBox>

                                <!-- Date Filter -->
                                <ComboBox x:Name="DateFilterComboBox" Grid.Column="2" Width="120" Height="35" 
                                          FontSize="14" Margin="0,0,10,0"
                                          SelectionChanged="DateFilter_Changed">
                                    <ComboBoxItem Content="Tat ca" IsSelected="True"/>
                                    <ComboBoxItem Content="Hom nay"/>
                                    <ComboBoxItem Content="7 ngay qua"/>
                                    <ComboBoxItem Content="30 ngay qua"/>
                                </ComboBox>

                                <!-- Refresh Button -->
                                <Button Grid.Column="3" Content="🔄 Refresh" Style="{StaticResource ModernButton}" 
                                        Height="35" Click="RefreshOrders_Click"/>
                            </Grid>

                            <!-- Orders DataGrid -->
                            <DataGrid x:Name="OrdersDataGrid" 
                                    AutoGenerateColumns="False"
                                    HeadersVisibility="Column"
                                    GridLinesVisibility="Horizontal"
                                    RowBackground="Transparent"
                                    AlternatingRowBackground="#FFF8F9FA"
                                    BorderThickness="1"
                                    BorderBrush="#FFE0E0E0"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    CanUserReorderColumns="False"
                                    CanUserResizeRows="False"
                                    SelectionMode="Single"
                                    RowHeight="50">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="80"/>
                                    <DataGridTextColumn Header="Khách hàng" Binding="{Binding Customer.FullName}" Width="150"/>
                                    <DataGridTextColumn Header="Ngày đặt" Binding="{Binding OrderDate, StringFormat=dd/MM/yyyy HH:mm}" Width="140"/>
                                    <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount, StringFormat={}{0:N0}₫}" Width="120"/>
                                    <DataGridTextColumn Header="Địa chỉ giao hàng" Binding="{Binding ShippingAddress}" Width="200"/>
                                    <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="100"/>
                                    
                                    <!-- Status Column with Color -->
                                    <DataGridTemplateColumn Header="Trang thai" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="15" Padding="8,4" HorizontalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                    <Setter Property="Background" Value="#FFFFC107"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Confirmed">
                                                                    <Setter Property="Background" Value="#FF2196F3"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Shipping">
                                                                    <Setter Property="Background" Value="#FFFF9800"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Delivered">
                                                                    <Setter Property="Background" Value="#FF4CAF50"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                    <Setter Property="Background" Value="#FFF44336"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Status}" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Carrier Column -->
                                    <DataGridTextColumn Header="Nguoi van chuyen" Binding="{Binding Carrier.FullName}" Width="150"/>

                                    <!-- Actions Column -->
                                    <DataGridTemplateColumn Header="Thao tac" Width="250">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Content="Chi tiet" Style="{StaticResource ModernButton}" 
                                                            Height="30" FontSize="11" Margin="2" Width="60"
                                                            Click="ViewOrderDetail_Click" Tag="{Binding OrderId}"/>
                                    
                                                    <Button Content="Xac nhan" Height="30" FontSize="11" Margin="2" Width="70"
                                                            Click="ConfirmOrder_Click" Tag="{Binding OrderId}">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                                                <Setter Property="Background" Value="#FF4CAF50"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Confirmed">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Shipping">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Delivered">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                
                                                    <Button Content="Huy" Height="30" FontSize="11" Margin="2" Width="50"
                                                            Click="CancelOrder_Click" Tag="{Binding OrderId}">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                                                <Setter Property="Background" Value="#FFF44336"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Shipping">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Delivered">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel x:Name="CategoriesContent" Visibility="Collapsed">
                    <!-- Category management content will be added here -->
                    <TextBlock Text="Category Management Coming Soon..." FontSize="20" 
                             HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Foreground="#FF7F8C8D" Margin="50"/>
                </StackPanel>

                <StackPanel x:Name="AdminsContent" Visibility="Collapsed">
                    <!-- Admin management content will be added here -->
                    <TextBlock Text="Admin Management Coming Soon..." FontSize="20" 
                             HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Foreground="#FF7F8C8D" Margin="50"/>
                </StackPanel>

                <StackPanel x:Name="ReportsContent" Visibility="Collapsed">
                    <!-- Reports content will be added here -->
                    <TextBlock Text="Reports Coming Soon..." FontSize="20" 
                             HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Foreground="#FF7F8C8D" Margin="50"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>