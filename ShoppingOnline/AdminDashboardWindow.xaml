<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ShoppingOnline.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Shopping Online" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Style="{StaticResource AdminWindow}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource AdminPrimaryRed}">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource AdminDarkRed}" Height="80">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ADMIN" FontSize="24" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="DASHBOARD" FontSize="16" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Margin="0,20,0,0">
                    <Button Content="📊 Dashboard" Style="{StaticResource AdminActiveSidebarButton}" 
                          Click="Dashboard_Click" x:Name="DashboardBtn"/>
                    <Button Content="👥 Quan ly Khach hang" Style="{StaticResource AdminSidebarButton}" 
                          Click="Customers_Click" x:Name="CustomersBtn"/>
                    <Button Content="📦 Quan ly San pham" Style="{StaticResource AdminSidebarButton}" 
                          Click="Products_Click" x:Name="ProductsBtn"/>
                    <Button Content="🛍️ Quan ly Don hang" Style="{StaticResource AdminSidebarButton}" 
                          Click="Orders_Click" x:Name="OrdersBtn"/>
                    <Button Content="📋 Quan ly Danh muc" Style="{StaticResource AdminSidebarButton}" 
                          Click="Categories_Click" x:Name="CategoriesBtn"/>
                    <Button Content="👨‍💻 Quan ly Admin" Style="{StaticResource AdminSidebarButton}" 
                          Click="Admins_Click" x:Name="AdminsBtn"/>
                    <Button Content="📈 Bao cao" Style="{StaticResource AdminSidebarButton}" 
                          Click="Reports_Click" x:Name="ReportsBtn"/>
                    <Button Content="🚚 Quan ly Carrier" Style="{StaticResource AdminSidebarButton}" 
                          Click="Carriers_Click" x:Name="CarriersBtn"/>
                </StackPanel>

                <!-- User Info -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,20">
                    <Border Background="{StaticResource AdminDarkRed}" CornerRadius="5" Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock x:Name="AdminNameText" Text="Admin User" 
                                     Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="AdminEmailText" Text="admin@shop.com" 
                                     Foreground="#FFBDC3C7" FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    <Button Content="🚪 Dang xuat" Style="{StaticResource AdminSidebarButton}" 
                          Click="Logout_Click" Background="#B01029"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Page Title -->
                <Border Style="{StaticResource AdminCard}" Margin="20,20,20,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="PageTitle" Text="📊 Dashboard" Style="{StaticResource AdminHeaderText}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="PageSubtitle" Text="Tong quan he thong" Style="{StaticResource AdminBodyText}" 
                                 VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Dynamic Content Area -->
                <ContentControl x:Name="MainContentControl" Margin="0,20,0,20"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>