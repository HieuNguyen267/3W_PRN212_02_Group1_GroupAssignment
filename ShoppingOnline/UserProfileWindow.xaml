<Window x:Class="ShoppingOnline.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ShoppingOnline"
        Title="Thông tin cá nhân" Height="700" Width="1000" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryRed" Color="#E31837"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="MediumGray" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="DarkGray" Color="#666666"/>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryRed}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource LightGray}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="OrderItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource LightGray}"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        

    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryRed}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Thông tin cá nhân" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Quản lý thông tin tài khoản và đơn hàng" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="✕" Background="Transparent" Foreground="White" 
                        BorderThickness="0" FontSize="18" Click="Close_Click" Padding="10"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Sidebar - User Info -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <!-- User Profile Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Thông tin cá nhân" Style="{StaticResource SectionTitleStyle}"/>
                            
                            <TextBlock Text="Họ và tên:" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding CustomerName}" Style="{StaticResource InfoValueStyle}"/>
                            
                            <TextBlock Text="Email:" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding Email}" Style="{StaticResource InfoValueStyle}"/>
                            
                            <TextBlock Text="Số điện thoại:" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding Phone}" Style="{StaticResource InfoValueStyle}"/>
                            
                            <TextBlock Text="Địa chỉ:" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding Address}" Style="{StaticResource InfoValueStyle}"/>
                            
                            <TextBlock Text="Ngày tham gia:" Style="{StaticResource InfoLabelStyle}"/>
                            <TextBlock Text="{Binding CreatedDate}" Style="{StaticResource InfoValueStyle}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Thao tác" Style="{StaticResource SectionTitleStyle}"/>
                            
                            <Button Content="Cài đặt tài khoản" Style="{StaticResource ActionButtonStyle}" Click="AccountSettings_Click"/>
                            <Button Content="Xem đơn hàng" Style="{StaticResource ActionButtonStyle}" Click="ViewOrders_Click"/>
                            <Button Content="Giỏ hàng" Style="{StaticResource ActionButtonStyle}" Click="ViewCart_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Right Content - Recent Orders and Statistics -->
                <StackPanel Grid.Column="1">
                    <!-- Recent Orders -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Đơn hàng gần đây" Style="{StaticResource SectionTitleStyle}"/>
                            
                            <ItemsControl ItemsSource="{Binding RecentOrders}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource OrderItemStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding OrderId, StringFormat='Đơn hàng #{0}'}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding OrderDate, StringFormat='Ngày đặt: {0:dd/MM/yyyy HH:mm}'}" FontSize="12" Foreground="{StaticResource DarkGray}"/>
                                                    <TextBlock Text="{Binding Status}" FontSize="12" Foreground="{StaticResource PrimaryRed}"/>
                                                </StackPanel>
                                                

                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <TextBlock Text="Không có đơn hàng nào" HorizontalAlignment="Center" Foreground="{StaticResource DarkGray}" 
                                       Margin="0,20" x:Name="NoOrdersText"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Statistics -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Thống kê" Style="{StaticResource SectionTitleStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding TotalOrders}" FontSize="24" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryRed}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Đơn hàng" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding TotalSpent}" FontSize="24" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryRed}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Tổng chi tiêu" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <TextBlock Text="{Binding MembershipLevel}" FontSize="16" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryRed}" HorizontalAlignment="Center" Margin="0,10"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
