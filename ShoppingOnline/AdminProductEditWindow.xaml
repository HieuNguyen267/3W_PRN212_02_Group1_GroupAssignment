<Window x:Class="ShoppingOnline.AdminProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ShoppingOnline.Converters"
        Title="Quản lý sản phẩm" Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#D32F2F"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#FFCDD2"/>
        <SolidColorBrush x:Key="TextColor" Color="#212121"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
        
        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B71C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- ComboBox Style -->
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Label Style -->
        <Style x:Key="FormLabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Error Text Style -->
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ErrorColor}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Thêm/Sửa sản phẩm" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource PrimaryColor}"
                   Margin="0,0,0,20"/>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Product ID -->
                <Label Content="Mã sản phẩm *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox x:Name="ProductIdTextBox" 
                         Style="{StaticResource FormTextBoxStyle}"
                         IsEnabled="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}"/>
                <TextBlock x:Name="ProductIdError" 
                           Style="{StaticResource ErrorTextStyle}" 
                           Visibility="Collapsed"/>
                
                <!-- Product Name -->
                <Label Content="Tên sản phẩm *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox x:Name="ProductNameTextBox" 
                         Style="{StaticResource FormTextBoxStyle}"/>
                <TextBlock x:Name="ProductNameError" 
                           Style="{StaticResource ErrorTextStyle}" 
                           Visibility="Collapsed"/>
                
                <!-- Category -->
                <Label Content="Danh mục *" Style="{StaticResource FormLabelStyle}"/>
                <ComboBox x:Name="CategoryComboBox" 
                          Style="{StaticResource FormComboBoxStyle}"
                          DisplayMemberPath="CategoryName"
                          SelectedValuePath="CategoryId"/>
                <TextBlock x:Name="CategoryError" 
                           Style="{StaticResource ErrorTextStyle}" 
                           Visibility="Collapsed"/>
                
                <!-- Price -->
                <Label Content="Giá *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox x:Name="PriceTextBox" 
                         Style="{StaticResource FormTextBoxStyle}"/>
                <TextBlock x:Name="PriceError" 
                           Style="{StaticResource ErrorTextStyle}" 
                           Visibility="Collapsed"/>
                
                <!-- Stock Quantity -->
                <Label Content="Số lượng tồn kho *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox x:Name="StockQuantityTextBox" 
                         Style="{StaticResource FormTextBoxStyle}"/>
                <TextBlock x:Name="StockQuantityError" 
                           Style="{StaticResource ErrorTextStyle}" 
                           Visibility="Collapsed"/>
                
                <!-- Status (Only show in edit mode) -->
                <Label Content="Trạng thái" Style="{StaticResource FormLabelStyle}"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <RadioButton x:Name="ActiveRadioButton" 
                                 Content="Hoạt động" 
                                 IsChecked="True" 
                                 Margin="0,0,20,0"
                                 VerticalAlignment="Center"/>
                    <RadioButton x:Name="InactiveRadioButton" 
                                 Content="Vô hiệu hóa" 
                                 VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Description -->
                <Label Content="Mô tả" Style="{StaticResource FormLabelStyle}"/>
                <TextBox x:Name="DescriptionTextBox" 
                         Style="{StaticResource FormTextBoxStyle}"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
                
                <!-- Images Section -->
                <Label Content="Hình ảnh sản phẩm" Style="{StaticResource FormLabelStyle}"/>
                <Border BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        Padding="10" 
                        Margin="0,5">
                    <StackPanel>
                        <!-- Image List -->
                        <TextBlock Text="Hình ảnh hiện tại:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        <ListBox x:Name="ImagesListBox" 
                                 Height="120" 
                                 Margin="0,0,0,10">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding ImageUrl}" 
                                                   VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" 
                                                Content="Đặt làm ảnh chính" 
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Padding="8,4"
                                                Margin="5,0"
                                                Click="SetPrimaryImage_Click"
                                                Tag="{Binding}"/>
                                        <Button Grid.Column="2" 
                                                Content="Xóa" 
                                                Background="{StaticResource ErrorColor}"
                                                Foreground="White"
                                                Padding="8,4"
                                                Click="RemoveImage_Click"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <!-- Add Image Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Thêm ảnh" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Click="AddImage_Click"/>
                            <Button Content="Xem ảnh" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="ViewImage_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Image Preview -->
                <Border x:Name="ImagePreviewBorder" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        Height="200" 
                        Margin="0,10,0,0"
                        Visibility="Collapsed">
                    <Image x:Name="ImagePreview" 
                           Stretch="Uniform"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Lưu" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="Save_Click"/>
            <Button Content="Hủy" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
