<Window x:Class="ShoppingOnline.AdminProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chinh sua San pham" Height="480" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="HeaderText" Text="San pham" FontSize="20" FontWeight="Bold" Foreground="#E31837"/>
            <TextBlock Text="Nhap thong tin san pham" FontSize="12" Foreground="#666"/>
        </StackPanel>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Ma san pham" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="ProductIdTextBox" Grid.Row="0" Grid.Column="1" Height="30" Padding="8" Margin="0,0,0,10"/>

            <TextBlock Text="Ten san pham" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="ProductNameTextBox" Grid.Row="1" Grid.Column="1" Height="30" Padding="8" Margin="0,0,0,10"/>

            <TextBlock Text="Danh muc" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <ComboBox x:Name="CategoryComboBox" Grid.Row="2" Grid.Column="1" Height="30" Margin="0,0,0,10" DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId"/>

            <TextBlock Text="Gia" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="PriceTextBox" Grid.Row="3" Grid.Column="1" Height="30" Padding="8" Margin="0,0,0,10"/>

            <TextBlock Text="So luong ton" Grid.Row="4" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <TextBox x:Name="StockTextBox" Grid.Row="4" Grid.Column="1" Height="30" Padding="8" Margin="0,0,0,10"/>

            <TextBlock Text="Trang thai hoat dong" Grid.Row="5" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
            <CheckBox x:Name="IsActiveCheckBox" Grid.Row="5" Grid.Column="1" Content="Kich hoat" Margin="0,0,0,10"/>

            <TextBlock Text="Mo ta" Grid.Row="6" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Top"/>
            <TextBox x:Name="DescriptionTextBox" Grid.Row="6" Grid.Column="1" AcceptsReturn="True" Height="100" Padding="8" Margin="0,0,0,10"/>

            <!-- Images -->
            <TextBlock Text="Hinh anh" Grid.Row="7" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top"/>
            <Grid Grid.Row="7" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="Them hinh" Width="110" Height="28" Margin="0,0,8,0" Click="AddImage_Click"/>
                    <Button Content="Xoa hinh" Width="100" Height="28" Margin="0,0,8,0" Click="RemoveImage_Click"/>
                    <Button Content="Dat lam anh chinh" Width="160" Height="28" Click="SetPrimaryImage_Click"/>
                </StackPanel>
                <ListBox x:Name="ImagesListBox" Grid.Row="1" SelectionMode="Single" Height="140" BorderBrush="#DDD" BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8" Padding="6" BorderBrush="#EEE" BorderThickness="1" CornerRadius="6">
                                <DockPanel>
                                    <Image Width="72" Height="72" Stretch="UniformToFill" Margin="0,0,10,0" Source="{Binding ImageUrl}"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ImageUrl}" FontSize="11" Foreground="#666" TextTrimming="CharacterEllipsis" Width="380"/>
                                        <TextBlock Text="{Binding IsPrimary, StringFormat=Anh chinh: {0}}" FontSize="11"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Huy" Width="90" Height="32" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button x:Name="SaveButton" Content="Luu" Width="120" Height="32" Background="#E31837" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>

