<Window x:Class="ShoppingOnline.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký tài khoản" Height="550" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="White"> <!-- Nền trắng, header đỏ -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header -->
    <Border Grid.Row="0" Background="#E31837" Padding="20,15"> <!-- Header đỏ -->
            <TextBlock Text="Đăng ký tài khoản" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>
        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" Padding="30,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Full Name -->
                <TextBlock Text="Họ và tên:" Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" Height="30" Padding="5" Margin="0,0,0,10"/>
                <!-- Username -->
                <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Height="30" Padding="5" Margin="0,0,0,10"/>
                <!-- Email -->
                <TextBlock Text="Email:" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Height="30" Padding="5" Margin="0,0,0,10"/>
                <!-- Password -->
                <TextBlock Text="Mật khẩu:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Padding="5" Margin="0,0,0,10"/>
                <!-- Confirm Password -->
                <TextBlock Text="Xác nhận mật khẩu:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="30" Padding="5" Margin="0,0,0,10"/>
                <!-- Phone -->
                <TextBlock Text="Số điện thoại:" Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneTextBox" Height="30" Padding="5" Margin="0,0,0,10"/>
                <!-- Address -->
                <TextBlock Text="Địa chỉ:" Margin="0,0,0,5"/>
                <TextBox x:Name="AddressTextBox" Height="30" Padding="5" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>
        <!-- Buttons -->
    <Border Grid.Row="2" Background="#FFEEEEEE" Padding="20,15"> <!-- Footer sáng -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RegisterButton" Content="Đăng ký" Width="100" Height="35" Background="#E31837" Foreground="White" Margin="0,0,10,0" Click="Register_Click"/>
                <Button x:Name="CancelButton" Content="Hủy" Width="100" Height="35" Background="#FF9E9E9E" Foreground="White" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
